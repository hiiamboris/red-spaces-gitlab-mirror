						; item/5: space/size				;@@ or use new-size in a map?
					; ]
				; ]
			; ]
			
			; map: clear []
			; margin:  layout/margin
			; spacing: layout/spacing
			; row-y: margin/y
			; total-length: 0
			; foreach [row-size row] rows [
